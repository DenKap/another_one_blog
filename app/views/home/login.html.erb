<div class="login-box">
  <div class="wrapper">
    <div class="container">
      <h1>Log In</h1>
      <%= form_tag(session_path) do %>
        <p class="label">Email:</p>
        <p><%= email_field_tag :email %></p>
        <p class="label">Password:</p>
        <p><%= password_field_tag :password %></p>
        <p class="submit"><%= submit_tag 'Login' %></p>
      <% end %>
    </div>
  </div>
</div>
