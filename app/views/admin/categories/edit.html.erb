<div class="edit-form">
  <div class="container">
    <div class="page-header">
      <div class="getback">&larr; <%=link_to 'Categories', admin_categories_path %></div>
      <h1>Edit <%=@category.name %></h1>
    </div>
    <div class="row">
      <div class="col-xs-12 .col-sm-6 .col-md-8">
        <%=form_for @category, url: admin_category_path(@category), html: { multipart: true } do |f| %>
          <%= render partial: 'form', locals: { f: f } %>
          <p class="submit"><%=f.submit 'Update Category' %></p>
        <% end %>
      </div>
    </div>
</div>