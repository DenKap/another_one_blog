<h1>Settings</h1>
<p class="move-back">&larr;<%=link_to 'Home Page', root_path %></p>
<div class="centered-wide-form">
  <%=form_for @settings, url: admin_setting_path(@settings) do |f| %>

    <%=render partial: 'layouts/partials/form_error_messages', locals: { object: @settings }%>
    
    <h2>Owner params:</h2>
    <p class="label"><%=f.label :email, 'Email:' %></p>
    <p><%=f.text_field :email %></p>
    <p class="label"><%=f.label :new_password, 'Password:' %></p>
    <p><%=f.password_field :new_password %></p>
    <p><sup>*enter new password to change previous</sup></p>

     <p class="submit"><%=f.submit 'Accept Changes' %></p>

  <% end %>
</div>
